{
  "name": "rowy-run",
  "env": {
    "ROWY_SECRET": {
      "generator": "secret"
    }
  },
  "options": {
    "allow-unauthenticated": true,
    "memory": "2Gi"
  },
  "build": {
    "skip": true
  },

  "hooks": {
    "prebuild": {
      "commands": [
        "npm install",
        "npm run build",
        "cd build/hooks && node prebuild"
      ]
    },
    "postcreate": {
      "commands": ["cd build/hooks && node postcreate"]
    }
  }
}
